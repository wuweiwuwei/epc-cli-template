{
  "name": "cbim-epc-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --mode development",
    "new:page": "node ./scripts/index.mjs",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "lint:script": "eslint --fix --ext .js --ext .ts --ext .vue src/",
    "lint:prettierrc": "prettier --write .",
    "build:all:dev": "node ./scripts/build.cjs development",
    "build:all:test": "node ./scripts/build.cjs test",
    "build:all:pre": "node ./scripts/build.cjs prediction",
    "build:all:pro": "node ./scripts/build.cjs production",
    "build:development": "vite build --mode development",
    "build:test": "vite build --mode test",
    "build:prediction": "vite build --mode prediction",
    "build:production": "vite build --mode production",
    "preview": "vite preview"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue}": [
      "pnpm run lint:script",
      "pnpm run lint:prettierrc",
      "git add ."
    ]
  },
  "dependencies": {
    "@cbim-epc-magic/components": "^1.0.8",
    "@cbim-epc-magic/styles": "^1.0.8",
    "@cbim-epc-magic/utils": "^1.0.16",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.7",
    "chalk": "^4.1.2",
    "element-plus": "^2.6.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "unplugin-auto-import": "^0.17.5",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.22",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "boxen": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.22.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "typescript": "^4.9.5",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.5.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-imagemin": "^0.6.1",
    "vue-tsc": "^1.8.27"
  },
  "pnpm": {
    "overrides": {
      "bin-wrapper": "npm:bin-wrapper-china"
    }
  }
}
